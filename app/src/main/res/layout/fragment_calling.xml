<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CallingFragment">


    <ImageButton
        android:id="@+id/call_number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_call_bg"
        android:src="@drawable/ic_call"
        android:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/calling_number_txt"
        app:layout_constraintStart_toStartOf="@+id/calling_number_txt"
        app:layout_constraintTop_toBottomOf="@+id/calling_number_txt" />

    <EditText
        android:id="@+id/calling_number_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="enter number ex. 010xxxxxxxxx"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>